{
  "name": "trpc-electron-fork",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Par9uet",
    "email": "par9uet@qq.com"
  },
  "exports": {
    "./main": {
      "types": "./dist/main.d.ts",
      "require": "./dist/main.cjs",
      "import": "./dist/main.mjs"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "require": "./dist/renderer.cjs",
      "import": "./dist/renderer.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build -c vite.main.config.ts && vite build -c vite.renderer.config.ts && pnpm run build:types",
    "build:types": "dts-bundle-generator --config dts-bundle-generator.config.ts && pnpm copy:types",
    "copy:types": "cp dist/main.d.ts dist/renderer.d.ts ./",
    "test": "vitest -c vitest.config.ts",
    "test:ci": "vitest run -c vitest.config.ts --coverage",
    "test:e2e": "playwright test",
    "lint": "prettier --write ."
  },
  "devDependencies": {
    "@trpc/client": "^11.3.1",
    "@trpc/server": "^11.3.1",
    "@types/node": "^22.15.31",
    "@vitest/coverage-v8": "^3.2.3",
    "dts-bundle-generator": "^9.5.1",
    "electron": "^36.4.0",
    "prettier": "^3.5.3",
    "superjson": "^2.2.2",
    "vite": "^6.3.5",
    "vite-plugin-commonjs-externals": "^0.1.4",
    "vitest": "^3.2.3",
    "zod": "^3.25.64"
  },
  "peerDependencies": {
    "@trpc/client": ">=11.0.0",
    "@trpc/server": ">=11.0.0",
    "electron": ">19.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
